    "gray-matter": "^4.0.2",
    "image-size": "1.0.0",
    "next": "11.0.1",
    "next-mdx-remote": "^3.0.1",
    "next-themes": "^0.0.14",
    "postcss": "^8.3.5",
    "preact": "^10.5.13",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "reading-time": "1.3.0",
    "rehype-katex": "^4.0.0",
    "remark-autolink-headings": "6.0.1",
    "remark-code-titles": "0.1.2",
    "remark-footnotes": "^3.0.0",
    "remark-math": "^3.0.1",
    "remark-slug": "6.0.0",
    "tailwindcss": "^2.2.2"
